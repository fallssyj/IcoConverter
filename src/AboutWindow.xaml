<hc:Window
    x:Class="IcoConverter.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding _Title}"
    Width="520"
    Height="420"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Border Padding="20">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="20" Text="IcoConverter" />
            </StackPanel>

            <TabControl Margin="0,8,0,0">
                <TabItem Header="鸣谢">
                    <ListBox
                        Height="240"
                        Padding="5"
                        BorderThickness="0"
                        ItemsSource="{Binding Libraries}"
                        ScrollViewer.VerticalScrollBarVisibility="Auto" />
                </TabItem>
                <TabItem Header="MIT License">
                    <TextBox
                        Height="240"
                        Padding="10"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        BorderThickness="0"
                        IsReadOnly="True"
                        Text="{Binding LicenseText, Mode=OneWay}"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />
                </TabItem>
            </TabControl>

            <Separator Margin="0,16,0,10" />
            <TextBlock Text="© 2026 IcoConverter" />
        </StackPanel>
    </Border>
</hc:Window>
